---
import Layout from '../layouts/Layout.astro';
import { UrlParameterInjection } from '@/components/UrlParameterInjection';

const title = "URL Parameter Injection";
---

<Layout title={title}>
  <div class="flex flex-col items-center">
    <div class="w-full max-w-4xl space-y-8">
      <div class="text-center space-y-2">
        <h1 class="text-4xl font-bold">{title}</h1>
        <p class="text-muted-foreground">Security tools and utilities</p>
      </div>
      <UrlParameterInjection client:load />
    </div>
  </div>
</Layout>
